# MQTT Server Configuration
MQTT_PORT=1883                # MQTT TCP port
MQTT_WS_PORT=8883             # MQTT WebSocket port
HOST=0.0.0.0                  # The host to bind to
LOG_LEVEL=info                # Logging level (error, warn, info, debug)

# Dashboard Configuration
DASHBOARD_PORT=3000           # Web Dashboard port

# Security Configuration
ENABLE_AUTH=false             # Enable/disable authentication
USERNAME=admin                # Admin username (when auth is enabled)
PASSWORD=changeme             # Admin password (when auth is enabled)

# API Keys (Replace with your actual keys)
WEATHER_API_KEY=your_key_here # Weather service API key
WEATHER_LOCATION=London,uk    # Default weather location
NEWS_API_KEY=your_key_here    # News service API key
NEWS_COUNTRY=us               # Default country for news

# System Topic Update Intervals (in milliseconds)
UPDATE_INTERVAL_TIME=60000       # 1 minute
UPDATE_INTERVAL_SYSTEM=300000    # 5 minutes
UPDATE_INTERVAL_WEATHER=1800000  # 30 minutes
UPDATE_INTERVAL_NEWS=3600000     # 1 hour
UPDATE_INTERVAL_CRYPTO=900000    # 15 minutes

# Advanced Configuration
MAX_CONNECTIONS=1000          # Maximum number of simultaneous connections
MESSAGE_RETENTION_LIMIT=100   # Maximum number of retained messages per topic
MAX_MESSAGE_SIZE=10240        # Maximum message size in bytes (10KB) 